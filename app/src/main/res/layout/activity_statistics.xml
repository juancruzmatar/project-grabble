<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_statistics"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.s1451552.grabble.StatisticsActivity">

    <TextView
        android:id="@+id/travel_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/stats_travel_distance"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/travel_distance_var"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@string/stats_travel_distance_var"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/letter_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/travel_distance"
        android:layout_marginTop="10dp"
        android:text="@string/stats_letter_number"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/letter_number_var"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/travel_distance_var"
        android:layout_marginTop="10dp"
        android:text="@string/stats_word_number_var"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/word_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/letter_number"
        android:layout_marginTop="10dp"
        android:text="@string/stats_word_number"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/word_number_var"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/letter_number_var"
        android:layout_marginTop="10dp"
        android:text="@string/stats_word_number_var"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stats_highscore"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/highscore_var"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stats_highscore_var"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@color/accent_dark"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
